<% include ../partials/header %>
  <div class="container">
    <h1 class="text-center py-4">Add new Campgrounds</h1>
    <div class="row">
      <div class="col">
        <div class="mx-auto w-50 text-center">
          <form action="/campgrounds" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name="name" id="name" class="name" placeholder="Campgrounds name" required>
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="image" id="image" class="image" placeholder="Campgrounds image" required>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="description" id="description" class="description" placeholder="Write something about the Campground" cols="30" rows="10" required></textarea>
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="price" id="price" class="price" placeholder="Campground price" required>
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-lg mt-2 px-5 text-center">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>