<% include ../partials/header %>

<div class="container">

  <h1 class="mx-auto w-50 h2 my-5">Add new comment to <%= campground.name; %></h1>
<form action="/campgrounds/<%= campground._id; %>/comments" class="w-50 mx-auto" method="POST">
  <div class="form-group">
    <label for="text">Comment</label>
    <input type="text" class="form-control w-75" id="text" placeholder="Your comments" name="comment[text]">
  </div>
  <button type="submit" class="btn btn-info">Submit</button>
</form>
</div>





