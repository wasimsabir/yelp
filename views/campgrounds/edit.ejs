<% include ../partials/header %>
<h1 class="display-4 text-dark text-center">Edit <%= campgrounds.name; %></h1>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="w-50 mx-auto">
      <form method="POST" action="/campgrounds/<%= campgrounds._id %>?_method=PUT">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="name" required name="campground[name]" value="<%= campgrounds.name; %>">
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input type="text" class="form-control" id="image" required name="campground[image]" value="<%= campgrounds.image; %>">
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="number" class="form-control" id="price" required name="campground[price]" value="<%= campgrounds.price; %>">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" id="description" required name="campground[description]" rows="12"><%= campgrounds.description; %></textarea>
        </div>
        <button type="submit" class="btn btn-outline-info">Submit</button>
      </form>
    </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>